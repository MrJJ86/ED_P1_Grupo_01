<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:padding="16dp"
    tools:context=".view.ResultActivity">

    <!-- Mensaje del resultado -->
    <TextView
        android:id="@+id/tv_result_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Resultado del Juego!"
        android:textColor="@color/md_theme_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón para volver al menú principal -->
    <Button
        android:id="@+id/btn_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver al Menú Principal"
        android:textColor="@color/md_theme_inverseSurface"
        android:textSize="18sp"
        android:background="@drawable/round_shape"
        app:layout_constraintTop_toBottomOf="@id/tv_result_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón para jugar de nuevo -->
    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar de Nuevo"
        android:textColor="@color/md_theme_inverseSurface"
        android:textSize="18sp"
        android:background="@drawable/round_shape"
        app:layout_constraintTop_toBottomOf="@id/btn_main_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
